<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
    android:background="#4FA197">

    <TextView
        android:id="@+id/Loginactivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20px"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="573dp"
        android:text="Login Activity "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:ignore="HardcodedText,PxUsage,SpUsage,TextSizeCheck" />

    <EditText
        android:id="@+id/UsernameView"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="469dp"
        android:hint="username"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="285dp"
        android:text="Login"

        android:textSize="24sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/PasswordView"
        android:layout_width="235dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="363dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />


</RelativeLayout>